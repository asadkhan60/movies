<div class="item">
	<div class="movie-poster">
		<a href="https://demo.themeum.com/wordpress/moview/movie/the-forest/">
			<img class="img-responsive"
				 src="{{ asset('https://image.tmdb.org/t/p/w500/' ~ movie.posterPath ) }}"
				 alt="{{ movie.title }}">
		</a>
	</div>
	<a class="play-icon play-video" href="xnv__ogkt0M" data-type="youtube">
		<i class="themeum-moviewplay"></i>
	</a>
	<div class="content-wrap">
		<div class="video-container">
			<span class="video-close">x</span>
		</div>
	</div>
	<div class="movie-details">
		<div class="moview-rating-wrapper">
			<div class="moview-rating">
				<span class="star active"></span>
			</div>
			<span class="moview-rating-summary">
				{% if movie.voteCount|length %}
					<span>{{ movie.voteAverage }}</span>
					/10
				{% endif %}
			</span>
		</div>
		<div class="movie-name">
			<h2 class="movie-title">
				<a href="https://demo.themeum.com/wordpress/moview/movie/the-forest/">
					{{ movie.title }} ({{ movie.releaseDate|date('Y') }})
				</a>
			</h2>
			<span class="tag">
				{{ movie.tagline }}
			</span>
		</div>
		<div class="cast">
			<span>
				{% for genre in movie.genres|slice(0, 3) %}
					{{ genre.name }}{% if not loop.last %}, {% endif %}
				{% endfor %}
{#				{% if movie.genres|length > 3 %}
					...
				{% endif %}#}
			</span>
		</div>
	</div>
</div>